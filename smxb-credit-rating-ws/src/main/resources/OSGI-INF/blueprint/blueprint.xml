<?xml version="1.0" encoding="UTF-8"?>

<blueprint
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:jaxws="http://cxf.apache.org/blueprint/jaxws"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                         http://cxf.apache.org/blueprint/jaxws http://cxf.apache.org/schemas/blueprint/jaxws.xsd">


    <jaxws:endpoint id="ratingService"
        implementor="#ratingServiceSupplier"
        implementorClass="at.ac.tuwien.infosys.aic11.services.rating.ws.RatingService"        
        address="/RatingService">
    </jaxws:endpoint>
    
    <reference id="ratingLegacy" interface="at.ac.tuwien.infosys.aic11.legacy.interfaces.IRatingLegacy"/>
    
    <bean id="ratingServiceSupplier" class="at.ac.tuwien.infosys.aic11.services.rating.ws.RatingServiceImpl">
       <property name="ratingLegacy" ref="ratingLegacy"/>
    </bean>    
</blueprint>
