    <reference id="crmLegacy" interface="at.ac.tuwien.infosys.aic11.legacy.interfaces.ICustomerRelationsManagementLegacy" />
    
    <bean id="customerRelationsManagementImpl" class="at.ac.tuwien.infosys.aic11.services.contract.CustomerRelationsManagementImpl">
